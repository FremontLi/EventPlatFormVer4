@model IEnumerable<EventPlatFormVer4.Models.Event>

@{
    ViewData["Title"] = "Verify";
}

<h1>待审核活动列表</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayName("审核")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignUpStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignUpEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
            @switch (item.State)
            {
                case 0:
                    <td>
                        <a asp-action="Accept" asp-route-id="@item.Id">Accept</a> |
                        <a asp-action="Ban" asp-route-id="@item.Id">Ban</a>
                    </td>
                    <td asp-action="Info" asp-route-id="@ViewBag.Id">Back</td>
                    break;
                case 1:
                    <td>
                        <a asp-action="Ban" asp-route-id="@item.Id">Ban</a>
                    </td>
                    <td asp-action="Info" asp-route-id="@ViewBag.Id">Back</td>
                    break;
                case 2:
                    <td>
                        <a asp-action="Ban" asp-route-id="@item.Id">Ban</a>
                    </td>
                    <td asp-action="Info" asp-route-id="@ViewBag.Id">Back</td>
                    break;
                case 3:
                    <td>
                        <a asp-action="Ban" asp-route-id="@item.Id">Ban</a>
                    </td>
                    <td asp-action="Info" asp-route-id="@ViewBag.Id">Back</td>
                    break;
                default:
                    break;
            }
        </tr>
        }
    </tbody>
</table>