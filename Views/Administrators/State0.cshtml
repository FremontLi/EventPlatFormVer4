@model IEnumerable<EventPlatFormVer4.Models.Event>

<h2>待审核活动</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayName("审核")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.State == 0)
            {<tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
                    <a asp-action="Verify" asp-route-id="@item.Id">审核</a> 
                </td>

            </tr>
            }
        }
    </tbody>
</table>
