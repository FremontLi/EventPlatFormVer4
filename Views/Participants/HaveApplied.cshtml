@model IEnumerable<EventPlatFormVer4.Models.EventParticipant>

@{
    ViewData["Title"] = "HaveApplied";
}

<h1>已参加活动</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("EventId")
            </th>
            <th>
                @Html.DisplayName("开始时间")
            </th>
            <th>
                @Html.DisplayName("结束时间")
            </th>
            <th>
                @Html.DisplayName("活动地址")
            </th>
            <th>
                @Html.DisplayName("报名状态")
            </th>
            <th>
                @Html.DisplayName("退赛")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventStartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventEndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Address)
                </td>
                <td>
                    @Html.Display("test")
                </td>
                <td>
                    <a asp-action="ExitEvent" asp-route-id="@ViewData["Pid"]" asp-route-EPID="@item.Id">ExitEvent</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
