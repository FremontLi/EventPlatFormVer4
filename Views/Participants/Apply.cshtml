@model IEnumerable<EventPlatFormVer4.Models.Event>

@{
    ViewData["Title"] = "Apply";
}

<h1>可报名活动</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("活动名称")
            </th>
            <th>
                @Html.DisplayName("活动等级")
            </th>
            <th>
                @Html.DisplayName("承办单位")
            </th>
            <th>
                @Html.DisplayName("开始时间")
            </th>
            <th>
                @Html.DisplayName("结束时间")
            </th>
            <th>
                @Html.DisplayName("报名开始时间")
            </th>
            <th>
                @Html.DisplayName("报名结束时间")
            </th>
            <th>
                @Html.DisplayName("活动地址")
            </th>
            <th>
                @Html.DisplayName("报名")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SponsorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignUpStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignUpEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <!--item是event类的,这里似乎不应该传入item的Id？-->
            <td>
                <a asp-action="Apply" asp-route-id="@item.Id">Apply</a> |
            </td>
        </tr>
}
    </tbody>
</table>
